<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Days to complete</th>
    <th>Project</th>
    <th>Requester user</th>
    <th>Performer user</th>
    <th>Num shares</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%=h task.name %></td>
    <td><%=h task.description %></td>
    <td><%=h task.days_to_complete %></td>
    <td><%=h task.project_id %></td>
    <td><%=h task.requester_user_id %></td>
    <td><%=h task.performer_user_id %></td>
    <td><%=h task.num_shares %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>