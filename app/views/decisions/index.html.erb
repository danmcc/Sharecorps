<h1>Listing decisions</h1>

<table>
  <tr>
    <th>Project</th>
    <th>Creator user</th>
    <th>Summary</th>
    <th>Description</th>
    <th>Result</th>
  </tr>

<% @decisions.each do |decision| %>
  <tr>
    <td><%=h decision.project_id %></td>
    <td><%=h decision.creator_user_id %></td>
    <td>< %=h decision.summary %></td>
    <td>< %=h decision.description %></td>
    <td><%=h decision.result %></td>
    <td>< %= link_to 'Show', decision %></td>
  </tr>
<% end %>
</table>

<br />

